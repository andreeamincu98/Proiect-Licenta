<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookreader">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Light">

        <activity
            android:name="com.example.bookreader.AccountManagement.LogIn"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:noHistory="true"/>
        <activity
            android:name="com.example.bookreader.AccountManagement.Register"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AccountManagement.ForgotPassword"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Home"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Genres"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.GenreList"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Search"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Profile"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Settings"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name="com.example.bookreader.AppPages.Document"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

    </application>

</manifest>