<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        app:cardUseCompatPadding="true">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/home_first_image_slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="0"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/popular_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/home_first_image_slider"
        android:layout_marginTop="440dp"
        android:text="@string/Popular"
        android:textSize="25sp"
        android:textStyle="bold"

        android:textColor="@color/black"
        tools:ignore="NotSibling"/>

    <HorizontalScrollView
        android:id="@+id/first_horizontal_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:layout_marginTop="470dp"
        tools:ignore="NotSibling">

        <LinearLayout
            android:id="@+id/first_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/first_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book"/>
            <ImageButton
                android:id="@+id/second_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book2"/>
            <ImageButton
                android:id="@+id/third_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/magazine"/>

            <ImageButton
                android:id="@+id/forth_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/icon" />
            <ImageButton
                android:id="@+id/fifth_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book"/>
            <ImageButton
                android:id="@+id/sixth_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book2"/>
            <ImageButton

                android:id="@+id/seventh_pic"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/magazine"/>
        </LinearLayout>
    </HorizontalScrollView>



    <TextView
        android:id="@+id/recent_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/first_horizontal_scrollview"
        android:paddingTop="10dp"
        android:text="@string/Recent"
        android:textSize="25sp"
        android:textStyle="bold"

        android:textColor="@color/black"
        tools:ignore="NotSibling"/>

    <HorizontalScrollView
        android:id="@+id/second_horizontal_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:layout_below="@+id/recent_text"
        tools:ignore="NotSibling">

        <LinearLayout
            android:id="@+id/second_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/first_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book"/>
            <ImageButton
                android:id="@+id/second_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book2"/>
            <ImageButton
                android:id="@+id/third_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/magazine"/>

            <ImageButton
                android:id="@+id/forth_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/icon" />
            <ImageButton
                android:id="@+id/fifth_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book"/>
            <ImageButton
                android:id="@+id/sixth_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/book2"/>
            <ImageButton
                android:id="@+id/seventh_pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/magazine"/>
        </LinearLayout>
    </HorizontalScrollView>
        <TextView
            android:id="@+id/discover_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/second_horizontal_scrollview"
            android:paddingTop="10dp"
            android:text="@string/Discover"
            android:textSize="25sp"
            android:textStyle="bold"

            android:textColor="@color/black"
            tools:ignore="NotSibling"/>

        <HorizontalScrollView
            android:id="@+id/third_horizontal_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:layout_below="@+id/discover_text"
            tools:ignore="NotSibling">

            <LinearLayout
                android:id="@+id/third_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/first_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/book"/>
                <ImageButton
                    android:id="@+id/second_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/book2"/>
                <ImageButton
                    android:id="@+id/third_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/magazine"/>

                <ImageButton
                    android:id="@+id/forth_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/icon" />
                <ImageButton
                    android:id="@+id/fifth_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/book"/>
                <ImageButton
                    android:id="@+id/sixth_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/book2"/>
                <ImageButton
                    android:id="@+id/seventh_pic3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/magazine"/>
            </LinearLayout>
        </HorizontalScrollView>



    </RelativeLayout>
</ScrollView>
</RelativeLayout>